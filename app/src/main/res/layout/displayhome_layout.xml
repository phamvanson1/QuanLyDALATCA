<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF0F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Decorative Elements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_background"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nhà Hàng Của Bạn"
                android:textStyle="bold"
                android:textColor="#FF4081"
                android:textSize="24sp"
                android:fontFamily="@font/muli_black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/txt_welcom_XinChao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chức năng phụ trợ"
                android:textStyle="bold"
                android:textColor="#4A4A4A"
                android:textSize="18sp"
                android:background="@drawable/title_background"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Quick Actions Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="16dp"
            android:baselineAligned="false">

            <!-- Thống kê -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/layout_displayhome_ThongKe"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:elevation="4dp"
                    android:background="@drawable/circle_button_background">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/tkk"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thống kê\ndoanh thu"
                    android:textAlignment="center"
                    android:textColor="#4A4A4A"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Xem Bàn -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/layout_displayhome_XemBan"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:elevation="4dp"
                    android:background="@drawable/circle_button_background">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/an"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danh sách\nbàn"
                    android:textAlignment="center"
                    android:textColor="#4A4A4A"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Thêm Menu -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/layout_displayhome_XemMenu"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:elevation="4dp"
                    android:background="@drawable/circle_button_background">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/nu"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm\nThực đơn"
                    android:textAlignment="center"
                    android:textColor="#4A4A4A"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Nhân viên -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/layout_displayhome_XemNV"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:elevation="4dp"
                    android:background="@drawable/circle_button_background">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/us"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin\nnhân viên"
                    android:textAlignment="center"
                    android:textColor="#4A4A4A"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Decorative Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFB6C1"
            android:layout_marginHorizontal="32dp"/>

        <!-- Menu Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/section_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_menu"
                        android:tint="#FF4081"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menu Nhà Hàng"
                        android:textStyle="bold"
                        android:textColor="#FF4081"
                        android:textSize="20sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_displayhome_ViewAllCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/view_all_button"
                    android:padding="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_displayhome_LoaiMon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:clipToPadding="false"/>
        </LinearLayout>

        <!-- Payment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:background="@drawable/section_background"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_payment"
                        android:tint="#FF4081" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Thanh Toán Hôm Nay"
                        android:textColor="#FF4081"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_displayhome_ViewAllStatistic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/view_all_button"
                    android:padding="8dp"
                    android:text="Xem tất cả"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_displayhome_DonTrongNgay"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:clipToPadding="false" />
        </LinearLayout>
        </LinearLayout>


</ScrollView>