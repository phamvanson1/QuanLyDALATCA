<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Activities.AmountMenuActivity">

<androidx.cardview.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="20dp"
app:cardCornerRadius="15dp"
android:elevation="8dp"
android:layout_centerInParent="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn Số Lượng"
        android:textSize="24sp"
        android:fontFamily="@font/baloo"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtl_amountmenu_SoLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:hint="Nhập số lượng"
        app:hintTextColor="@color/greyish_brown"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:startIconDrawable="@drawable/ic_quantity"
    app:startIconTint="@color/colorPrimary"
    app:endIconMode="clear_text"
    app:endIconTint="@color/greyish_brown">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo"
        android:inputType="number" />
</com.google.android.material.textfield.TextInputLayout>


<Button
    android:id="@+id/btn_amountmenu_DongY"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:backgroundTint="@color/colorPrimary"
    android:text="Đồng Ý"
    android:fontFamily="@font/baloo"
    android:textAllCaps="false"
    android:textColor="@color/white"
    app:cornerRadius="10dp" />

</LinearLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>